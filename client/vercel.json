{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://crocus-rogue-frost.glitch.me"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://crocus-rogue-frost.glitch.me"
    }
  }
} 