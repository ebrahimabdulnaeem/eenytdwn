{
  "version": 2,
  "builds": [
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/[^.]+",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://crocus-rogue-frost.glitch.me"
  },
  "buildCommand": "npm run build",
  "outputDirectory": "build"
} 